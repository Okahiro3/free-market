.picup
  .picup__top
    .picup__top--title
      %p.category 新規投稿商品
      %p.products 新着表示

    .picup__top--contents
      - @products.each do |product|
        -if product.trading_status =='出品中'
          .picup__top--contents__no1
            .picup__top--contents__no1--top
              = link_to image_tag("#{product.images[0].image.url}", class:"image"), product_path(product.id)
            .picup__top--contents__no1--under
              %p
                = product.name
              %p
                = " #{product.price.to_s(:delimited)}" 
                円
              %p.tax (税込)
              %p.good ★０
        - else
          .picup__top--contents__no2
            .picup__top--contents__no2--top
              = image_tag "https://promiclospetsheets.up.n.seesaa.net/promiclospetsheets/image/E5A3B2E3828AE58887E3828C.jpg?d=a1", class:"image"
