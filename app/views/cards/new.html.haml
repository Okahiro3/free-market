.mypage
  .mypage__top-bar
    = render partial: 'users/header_mypage'
  .mypage__adress
    = link_to 'FreeMarket', root_path
    > マイページ

  .mypage__middle-bar
    .middle-bar
      =render partial: 'users/middle_side_bar_mypage'
      .resister 
        .show-main__registration-field
          %form.card-form{method: :post, action: "/cards", id: "chargeForm"}
            .resister__form--title{style:"background: #ffffff;"}
              クレジットカード情報登録  
            .resister__form--text{style:"background: #ffffff;"}
              %div カード番号 必須
              %input{type: "text", placeholder: "半角数字のみ", class: "show-main__registration-field__container__number--input", id: "card-num-input", style: "height:40px;width:20vw;"}
          .resister__form--text{style:"background: #ffffff;"}
            %div 有効期限 必須 
            %select#month-select{style: "height:40px;"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %select#year-select{style: "height:40px;"}
              %option{value: ""} --
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}2
          .resister__form--text{style:"background: #ffffff;"}
            %div セキュリティコードを入力
            %input{class: "show-main__registration-field__container__security--input", id: "security-code-input",  name: "security-code", type: "text", placeholder: "カード背面4桁もしくは3桁の番号", style: "height:40px;width:20vw;"}
          .resister__form--resister{style:"background: #ffffff;"}
            %input#add-card-btn{type: 'submit', value: "クレジットカードの登録", class: "show-main__registration-field__container--submit"}

  .mypage__bottom-bar
    =render partial: 'users/fotter_mypage'